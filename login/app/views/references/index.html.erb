<div class="container">
  <div class="col-md-12">
    <p id="notice"><%= notice %></p>

    <h1>References</h1>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Link</th>
          <th>Notes</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @references.each do |reference| %>
          <tr>
            <td><%= reference.ref_title %></td>
            <td><%= reference.ref_link %></td>
            <td><%= reference.ref_note %></td>

            <td><%= link_to 'Edit', edit_reference_path(reference), {:style=>"text-decoration: none; color: white;", :class=>"btn btn-primary"} %></td>
            <td><%= link_to 'Delete', reference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Reference', new_reference_path, {:style=>"text-decoration: none; color: white;", :class=>"btn btn-success"} %>

  </div>
</div>
