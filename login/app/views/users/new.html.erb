<div class="container">
    <div class="col-md-6">
        <h1>Register an account</h1>

        <%= simple_form_for(@user) do |f| %>
            <%= f.input :name %>
            <%= f.input :email %>
            <%= f.input :password %>
            <%= f.input :password_confirmation %>
            <%= f.button :submit %>
        <% end %>
    </div>
</div>
