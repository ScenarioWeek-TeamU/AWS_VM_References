<div class="container">
  <div class="col-md-12">
    <% if !notice.blank? %>
    <div class="alert alert-success" role="alert"><p id="notice"><%= notice %></p></div>
    <% end %>

    <h1 style="display: inline-block;">References: </h1>&nbsp;&nbsp;<h3 style="display: inline;"><%= @project.title %></h3>

    <table class="table table-hover">
      <thead>
        <tr>
          <th class="col-md-1">#</th>
          <th class="col-md-5">Title</th>
          <th class="col-md-2">Link</th>
          <th class="col-md-2">Notes</th>
          <th class="col-md-2"></th>
        </tr>
      </thead>

      <tbody>
        <% @i = 0 %>
        <% if @references.exists? %>
          <% @references.each do |reference| %>
            <tr>
              <td><%= @i=@i+1 %></td>
              <td><%= reference.ref_title %></td>
              <td><%= reference.ref_link %></td>
              <td><%= reference.ref_note %></td>

              <td><%= link_to 'Edit', edit_reference_path(reference), {:style=>"text-decoration: none; color: white; margin-right: 30px;", :class=>"btn btn-primary"} %><%= link_to 'Delete', reference, :class => 'btn btn-danger', :style => 'text-decoration: none; color: white;', :method => :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        <% else %>
          <tr><td class="col-md-4">No references to display</td></tr>
        <% end %>

      </tbody>
    </table>

    <%= link_to 'New Reference', new_reference_path, {:style=>"text-decoration: none; color: white;", :class=>"btn btn-success"} %>
    <%= link_to projects_path, {:style=>"text-decoration: none; color: white;", :class=>"btn btn-warning"} do %>
    <i class="fa fa-chevron-left"></i> Back to projects
    <% end %>

  </div>
</div>
